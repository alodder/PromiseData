@if (Model.TeacherClasses != null)
{

    <h3>@Model.Description Teachers</h3>
        <p>
            @Html.ActionLink("Add Teacher", "Create", "Teacher", new { id = Model.ID }, new { @class = "btn btn-default" })
        </p>


    foreach (var teacherclass in Model.TeacherClasses)
    {

        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">@Html.DisplayFor(modelItem => teacherclass.Teacher.EndDate)</div>
                <dl class="panel-body dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(modelItem => teacherclass.Teacher.NameFirst)
                    </dt>
                    <dd>
                        @Html.DisplayFor(modelItem => teacherclass.Teacher.NameFirst)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(modelItem => teacherclass.Teacher.NameLast)
                    </dt>
                    <dd>
                        @Html.DisplayFor(modelItem => teacherclass.Teacher.NameLast)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(modelItem => teacherclass.Teacher.TeacherType)
                    </dt>
                    <dd>
                        @Html.DisplayFor(modelItem => teacherclass.Teacher.TeacherType)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(modelItem => teacherclass.Teacher.TeacherIDNumber)
                    </dt>
                    <dd>
                        @Html.DisplayFor(modelItem => teacherclass.Teacher.TeacherIDNumber)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(modelItem => teacherclass.Teacher.StartDate)
                    </dt>
                    <dd>
                        @Html.DisplayFor(modelItem => teacherclass.Teacher.StartDate)
                    </dd>
                </dl>
                <p class="text-right">
                    @if (true) //Model.CanEdit
                    {
                        @Html.ActionLink("Edit", "Edit", "Teacher", new { id = teacherclass.Teacher.ID }, null)
                        @Html.Raw(" | ")
                        @Html.ActionLink("Details", "Details", "Teacher", new { id = teacherclass.Teacher.ID }, null)
                        @Html.Raw(" | ")
                        @Html.ActionLink("Remove", "RemoveFromClassroom", "Teacher", new { id = teacherclass.TeacherID, classroomid = teacherclass.ClassroomID }, null)
                    }
                </p>
            </div>
        </div>
    }
}

@*
    Table of Students
*@
@if (Model.ChildEnrollments != null)
{

    <h3>@Model.Description Children: @Model.ChildEnrollments.Count()</h3>

    <table class="table">
        <tr>
            <th>First Name</th>

            <th>Last Name</th>

            <th>Gender</th>

            <th>Birthdate</th>

            <th></th>
        </tr>



        @foreach (var childEnrollment in Model.ChildEnrollments)
    {

        <tr>
            <td>@Html.DisplayFor(modelItem => childEnrollment.Child.FirstName)</td>
            <td>@Html.DisplayFor(modelItem => childEnrollment.Child.LastName)</td>
            <td>@Html.DisplayFor(modelItem => childEnrollment.Child.Gender.Description)</td>
            <td>@childEnrollment.Child.Birthdate.GetValueOrDefault().ToShortDateString()</td>
            <td>
                <p class="text-right">
                    @if (true) //Model.CanEdit
                    {
                        @Html.ActionLink("Edit", "Edit", "Child", new { id = childEnrollment.Child.ID }, new { @class = "btn btn-default btn-xs" })
                        @Html.Raw(" | ")
                        @Html.ActionLink("Details", "Details", "Child", new { id = childEnrollment.Child.ID }, new { @class = "btn btn-default btn-xs" })
                        @Html.Raw(" | ")
                        @Html.ActionLink("Unenroll", "RemoveFromClassroom", "Child", new { id = childEnrollment.ChildID, classroomid = childEnrollment.ClassroomID }, new { @class = "btn btn-warning btn-xs" })
                    }
                </p>
            </td>
        </tr>
        }

    </table>
}
<p>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }, new { @class = "btn btn-default" })
</p>
