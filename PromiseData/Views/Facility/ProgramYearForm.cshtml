
@model PromiseData.Models.ProgramYear

@{
    Layout = null;
}

@using (Html.BeginForm("AddProgramYear"))
{
    <div class="form-inline">
        @Html.HiddenFor(m => m.ID)
        @Html.HiddenFor(m => m.ProviderID)
        <div class="form-group">
            @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(m => m.StartDate)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(m => m.EndDate)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ServiceHours, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(m => m.ServiceHours, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.ServiceHours)
        </div>
        <button id="" type="submit" class="btn btn-primary">Save</button>
    </div>
}