@model PromiseData.ViewModels.WaiversProcessViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Waiver Requests</h2>

<p>
    @Html.ActionLink("New Request", "Create", new { @role = "button" }, new { @class = "btn btn-default" })
</p>

<hr />
<h3>Waiver Requests</h3>
<table class="table">
    <tr>
        <th>
            Site
        </th>
        <th>
            Provider
        </th>
        <th>
            Waiver Type
        </th>
        <th>
            Staff Name
        </th>
        <th>
            Current Spark Rating
        </th>
        <th>
            Qualification
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.WaiverRequests)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Site.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Site.Provider.LegalName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WaiverType)
            </td>
            <td>
                @if (item.Staff != null)
                {
                    @item.Staff.NameLast;
                    @Html.Raw(", ");
                    @item.Staff.NameFirst;
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SparkCurrent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qualification)
            </td>
            <td>
                <div>
                    @Html.ActionLink("Update", "Edit", "WaiverRequests", new { id = item.WaiverRequestID }, new { @class = "btn btn-default btn-xs" }) |
                    @Html.ActionLink("View", "Details", "WaiverRequests", new { id = item.WaiverRequestID }, new { @class = "btn btn-default btn-xs" }) |
                    @Html.ActionLink("Cancel", "Delete", "WaiverRequests", new { id = item.WaiverRequestID }, new { @class = "btn btn-default btn-xs" }) |

                    @Html.ActionLink("Process", "Create", new { id = item.WaiverRequestID }, new { @class = "btn btn-default btn-xs" })
                </div>
            </td>
        </tr>
    }
</table>