@model PromiseData.ViewModels.UsersAdminViewModel

<h2>@Model.Heading</h2>

<p>
    @if (Model.CanAdd)
    {
        @Html.ActionLink("Create New User", "CreateUser", new { @role = "button" }, new { @class = "btn btn-default" })
    }
</p>

@using (Html.BeginForm("Search", "User"))
{
    <div class="form-group">
        @Html.Label("search", "User Lookup: ")
        <div class="input-group col-md-6">
            @Html.TextBoxFor(m => m.SearchTerm, new { @class = "form-control", placeholder = "Lookup user by name, username or phone number" })
            <span class="input-group-btn">
                <button type="submit" class="btn btn-default glyphicon glyphicon-search"></button>
                <i class="glyphicon glyphicon-search"></i>
            </span>
        </div>
    </div>
}

<table class="table table-striped table-responsive table-hover">
    <tr>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
        <th>
            Email Confirmed
        </th>
        <th>
            Phone Number
        </th>
        <th>
            Lockout Enabled
        </th>
        <th>
            Access Failed Count
        </th>
        <th>
            UserName
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Users) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailConfirmed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LockoutEnabled)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccessFailedCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Assign Role", "AssignRole", new { id = item.Id }) |
            @Html.ActionLink("Assign Institution", "AssignInstitution", new { id = item.Id }) |
            @Html.ActionLink("Change Password", "ChangePassword", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
