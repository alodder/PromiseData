
@{
    ViewBag.Title = "Index";
}

<div class="row">
    @if (ViewBag.displayAdminMenu == true)
    {
        <h4>Admin Controls:</h4>
        <div class="row">

            <div class="col-md-4">
                <ul>
                    <li>@Html.ActionLink("Add User", "CreateUser", "User")</li>
                    <li>@Html.ActionLink("Manage Users", "List", "User")</li>
                </ul>
            </div>

            <div class="col-md-4">
                <ul>
                    <li>@Html.ActionLink("Add Hub/Operator", "Create", "Institution")</li>
                    <li>@Html.ActionLink("Manage Hubs/Operator", "Index", "Institution")</li>
                    <li>@Html.ActionLink("Assign User to Hub", "List", "User")</li>
                </ul>
            </div>

            <div class="col-md-4">
                <ul>
                    <li>@Html.ActionLink("Process Waiver Requests", "Index", "WaiverRequests")</li>
                    <li>@Html.ActionLink("Current Waivers", "Index", "WaiverCurrents")</li>
                    <li>@Html.ActionLink("Archived Waivers", "Archived", "WaiverCurrents")</li>
                </ul>
            </div>
        </div>
    }
    @if (ViewBag.displayHubMenu == true)
    {
        <h4>Hub Controls:</h4>
        <div class="row">

            <div class="col-md-4">
                <ul>
                    <li>@Html.ActionLink("View Operator List", "Index", "Institution")</li>
                </ul>
            </div>

            <div class="col-md-4">
                <ul>
                    <li>@Html.ActionLink("View Provider List", "Index", "Facility")</li>
                    <li>@Html.ActionLink("Add Provider", "Create", "Facility")</li>
                </ul>
            </div>

        </div>
    }
    @if (ViewBag.displayProviderMenu == true)
    {
        <h4>Provider Controls</h4>
        <div class="row">

            <div class="col-md-4">
                <ul>
                    <li>@Html.ActionLink("View Child List", "Index", "Child")</li>
                    <li>@Html.ActionLink("Add Child", "Add", "Child")</li>
                </ul>
            </div>

            <div class="col-md-4">
                <ul>
                    <li>@Html.ActionLink("View Provider List", "Index", "Facility")</li>
                    <li>@Html.ActionLink("Add Provider", "Create", "Facility")</li>
                </ul>
            </div>

            <div class="col-md-4">
                <ul>
                    <li>@Html.ActionLink("Waiver Requests", "Index", "WaiverRequests")</li>
                </ul>
            </div>

            <div class="col-md-4">
                <ul>
                    <li>@Html.ActionLink("View Classrooms", "Index", "Classroom")</li>
                    <li>@Html.ActionLink("Add Classroom", "Create", "Classroom")</li>
                </ul>
            </div>

            <div class="col-md-4">
                <ul>
                    <li>@Html.ActionLink("View Teachers", "Index", "Teacher")</li>
                    <li>@Html.ActionLink("Add Teacher", "Create", "Teacher")</li>
                </ul>
            </div>

        </div>
    }
    else
    {
        <p>  Welcome <strong>@ViewBag.Name</strong></p>
        <p>@ViewBag.displayAdminMenu</p>
        <p>@ViewBag.displayHubMenu</p>
        <p>@ViewBag.displayProviderMenu</p>
    }
</div>