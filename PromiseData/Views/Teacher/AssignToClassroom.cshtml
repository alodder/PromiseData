@model PromiseData.ViewModels.TeacherClassViewModel

@{
    ViewBag.Title = "AssignToClassroom";
}

<h2>Assign Teacher To Classroom</h2>

<h3>@Model.classroom.Facility.Description</h3>

<h4>@Model.classroom.Description</h4>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.teacherid, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.DropDownListFor(model => model.teacherid, new SelectList(Model.Teachers, "ID", "FullName"), new { @class = "form-control col-md-3" })
                @Html.ValidationMessageFor(model => model.teacherid, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.DateAssigned, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-3">
                @Html.TextBoxFor(m => m.DateAssigned, new { @class = "form-control", placeholder = "2010-01-01 ", type = "date" })
            </div>
            @Html.ValidationMessageFor(m => m.DateAssigned)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.MonthsInClassroom, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-3">
                @Html.EditorFor(m => m.MonthsInClassroom, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(m => m.MonthsInClassroom)
        </div>
        <div class="form-group">
            <input type="submit" value="Assign" class="btn btn-primary" />
        </div>
    </div>
}
